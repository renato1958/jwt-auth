doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= title
        link(rel = "stylesheet", href="/css/styles.css")
    body
        if users.length
            .users
                each user in users
                    h3 #{user.last} #{user.first} (username: #{user.username}), ruolo: #{user.role}

        else 
            h3 Nessun utente registrato
        |
        script(src="/js/main.js", type="module")